  .center-vertical.plus-nav.center
    = image_tag 'brickhack.png', { id: 'logo', class: 'wow rotate-in' }
    %h3{ style: 'text-align: center; color: white; position: relative; top: 48px;' } February 11-12, 2017
    %br
    %p
      %em Enter your email below! We'll keep you posted.
    #mc_embed_signup
      %form#mc-embedded-subscribe-form.validate{ :action => "//coderit.us11.list-manage.com/subscribe/post?u=122b09a8cef4c1f3888af8e40&amp;id=be625a634d", :method => "post", :name => "mc-embedded-subscribe-form", :novalidate => "", :target => "_blank" }
